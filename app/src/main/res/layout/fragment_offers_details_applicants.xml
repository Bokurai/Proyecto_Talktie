<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:id="@+id/job_descrption_fragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".OffersDetailsApplicantsFragment"
    style="@style/groupStylewhite_A700">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10pxh"
        android:gravity="center_horizontal"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50pxh"
            android:padding="@dimen/_10pxh"
            android:src="@drawable/img_arrowleft_black_900"
            tools:ignore="ContentDescription" />

    </androidx.appcompat.widget.Toolbar>



        <LinearLayout
            android:id="@+id/elementsScrollView"
            style="@style/groupStylewhite_A700"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_3pxh"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOfferPosition"
                style="@style/txtRobotoromanmedium26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginEnd="@dimen/_24pxh"
                android:ellipsize="end"
                android:text="@string/lbl_design_lead2"
                tools:text="@string/lbl_design_lead2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <TextView
                android:id="@+id/txtOfferDate"
                style="@style/txtRobotoromanregular12_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginBottom="@dimen/_6pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/_20_07_2023" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="@dimen/_370pxh"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20pxh">

            </com.google.android.material.divider.MaterialDivider>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20pxh"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/job_icon1"
                    android:layout_width="@dimen/_20pxh"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:gravity="center"
                    android:src="@drawable/job_category_icon"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/titleWorkField"
                    style="@style/txtRobotoromanbold11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:letterSpacing="0.04"
                    android:singleLine="true"
                    android:text="@string/job_category"
                    android:textAllCaps="true" />

            </LinearLayout>


            <TextView
                android:id="@+id/txtWorkField"
                style="@style/txtRobotoromanregular14_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:text="@string/design" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20pxh"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/job_icon2"
                    android:layout_width="@dimen/_20pxh"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:gravity="center"
                    android:src="@drawable/contract_time_icon"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/titleContractTime"
                    style="@style/txtRobotoromanbold11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:letterSpacing="0.04"
                    android:singleLine="true"
                    android:text="@string/contract_time"
                    android:textAllCaps="true" />

            </LinearLayout>


            <TextView
                android:id="@+id/txtContractTime"
                style="@style/txtRobotoromanregular14_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:text="@string/contractTimeTxt" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20pxh"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/job_icon3"
                    android:layout_width="@dimen/_20pxh"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:gravity="center"
                    android:src="@drawable/descripcion_icon"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/titleJobDescription"
                    style="@style/txtRobotoromanbold11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:letterSpacing="0.04"
                    android:singleLine="true"
                    android:text="@string/lbl_job_description"
                    android:textAllCaps="true" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtJobDescription"
                style="@style/txtRobotoromanregular14_3"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginEnd="@dimen/_24pxh"
                android:text="@string/msg_can_you_bring_c" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAbout"
        style="@style/groupStylecornerRadius_1"
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:layout_gravity="top|start"
        android:layout_marginBottom="@dimen/_310pxh"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/applicants"
            style="@style/groupStylecornerRadius_1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5pxh"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAboutMe"
                style="@style/txtRobotoromanbold17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.54"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:singleLine="true"
                android:text="@string/msg_textApplicants"
                android:textSize="@dimen/_20pxv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/applicantsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="318dp"
                android:layout_marginStart="@dimen/_15pxv"
                android:layout_marginBottom="@dimen/_40pxh"
                android:layout_marginTop="@dimen/_5pxv"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>