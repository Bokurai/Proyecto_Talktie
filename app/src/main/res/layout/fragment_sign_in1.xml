<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignIn1"
    android:gravity="center_horizontal"
    android:id="@+id/linearSinginOne"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/groupStylewhite_A700">
    <LinearLayout android:id="@+id/linear08SignUp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">

        <LinearLayout
            android:id="@+id/linearColumnwelcomeuser"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearRowwelcomeuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_48pxh"
                android:layout_marginTop="@dimen/_80pxv"
                android:layout_marginEnd="@dimen/_48pxh"
                android:gravity="start"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.64"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtWelcomeuser"
                        style="@style/txtRobotoromanbold40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:text="@string/lbl_welcome_user"
                        tools:text="@string/lbl_welcome_user" />

                    <TextView
                        android:id="@+id/txtSignuptojoin"
                        style="@style/txtRobotoromanregular17_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:text="@string/lbl_sign_up_to_join"
                        tools:text="@string/lbl_sign_up_to_join" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/frameStackpngtreeavatar"
                    android:layout_width="@dimen/_114pxh"
                    android:layout_height="@dimen/_110pxv"
                    android:layout_marginBottom="@dimen/_24pxv">

                    <ImageView
                        android:id="@+id/imagePngtreeavatar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_98pxv"
                        android:layout_gravity="top|start"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_pngtreeavatar"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/btnGrid"
                        android:layout_width="@dimen/_32pxh"
                        android:layout_height="@dimen/_32pxh"
                        android:layout_gravity="bottom|end"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_marginEnd="@dimen/_20pxh"
                        android:background="@drawable/rectangle_bg_light_green_900_radius_16"
                        android:paddingHorizontal="@dimen/_10pxh"
                        android:paddingVertical="@dimen/_10pxv"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_grid"
                        tools:ignore="ContentDescription" />
                </FrameLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/etName"
                style="@style/etSolidRounded_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_48pxh"
                android:layout_marginTop="@dimen/_40pxv"
                android:layout_marginEnd="@dimen/_48pxh"
                android:background="@drawable/rectangle_bg_bluegray_50_radius_8"
                android:ellipsize="end"
                android:hint="@string/lbl_name"
                android:inputType="text"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_12pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_11pxv"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@color/bluegray_400"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/etEmail"
                style="@style/etSolidRounded_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_48pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_48pxh"
                android:background="@drawable/rectangle_bg_bluegray_50_radius_8"
                android:ellipsize="end"
                android:hint="@string/lbl_email"
                android:inputType="textEmailAddress"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_11pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_12pxv"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@color/bluegray_400"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/etPassword"
                style="@style/etSolidRounded_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_48pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_48pxh"
                android:background="@drawable/rectangle_bg_bluegray_50_radius_8"
                android:ellipsize="end"
                android:hint="@string/lbl_password"
                android:inputType="textPassword"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_11pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_12pxv"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@color/bluegray_400"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/etMobile"
                style="@style/etSolidRounded_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_48pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_48pxh"
                android:background="@drawable/rectangle_bg_bluegray_50_radius_8"
                android:ellipsize="end"
                android:hint="@string/lbl_mobile"
                android:inputType="phone"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_11pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_12pxv"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@color/bluegray_400"
                tools:ignore="Autofill" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSingIn"
                style="@style/btnSolidRounded_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_48pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_marginEnd="@dimen/_48pxh"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_15pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_15pxv"
                android:singleLine="true"
                android:text="@string/lbl_sing_in"
                android:textAllCaps="false"
                tools:text="@string/lbl_sing_in" />

            <TextView
                android:id="@+id/txtConfirmation"
                style="@style/txtRobotoromanregular17_1"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="@dimen/_97pxh"
                android:layout_marginTop="@dimen/_65pxv"
                android:layout_marginEnd="@dimen/_97pxh"
                android:layout_marginBottom="@dimen/_41pxv"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:singleLine="true"
                android:text="@string/msg_have_an_account"
                tools:text="@string/msg_have_an_account" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
