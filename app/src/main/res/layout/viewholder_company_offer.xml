<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5pxh"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imagePortadaCompany"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75pxh"
            android:layout_gravity="start"
            android:scaleType="fitXY"
            android:src="@drawable/img_rectangle49"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="@string/date_format"
                app:layout_constraintBottom_toTopOf="@+id/frameCompamyImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/frameCompamyImage"
                android:layout_width="@dimen/_114pxh"
                android:layout_height="@dimen/_110pxv"
                android:layout_marginTop="@dimen/_40pxh"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/shapeableImageView"
                    android:layout_width="@dimen/_100pxh"
                    android:layout_height="@dimen/_100pxh"
                    android:layout_gravity="center"

                    android:padding="5sp"
                    android:src="@drawable/company_logo"
                     />

                <ImageButton
                    android:id="@+id/btnGrid"
                    android:layout_width="@dimen/_32pxh"
                    android:layout_height="@dimen/_32pxh"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_20pxh"
                    android:background="@drawable/rectangle_bg_light_green_900_radius_16"
                    android:paddingHorizontal="@dimen/_5pxh"
                    android:paddingVertical="@dimen/_5pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/check"
                    tools:ignore="ContentDescription" />
            </FrameLayout>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/frameCompamyImage"
                app:layout_constraintStart_toStartOf="@+id/frameCompamyImage"
                app:layout_constraintTop_toBottomOf="@+id/frameCompamyImage">

                <TextView
                    android:id="@+id/companyNameOffer"
                    style="@style/txtPoppinssemibold19"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10pxh"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text="@string/lbl_nameCompany" />

                <TextView
                    android:id="@+id/offerNameCompany"
                    style="@style/txtPoppinssemibold17_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/lbl_offers_posted" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="@dimen/_10pxh"
                    android:id="@+id/btnFollowCompany"
                    style="@style/btnSolidRounded_D"
                    android:layout_width="@dimen/_150pxh"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_15pxh"
                    android:textAlignment="center"
                    android:text="@string/lbl_details"
                    android:textAllCaps="false" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>