<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:id="@+id/job_descrption_fragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".OfferDetailsFragment"
    style="@style/groupStylewhite_A700">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24pxh"
        android:layout_marginTop="@dimen/_32pxv"
        android:layout_marginEnd="@dimen/_24pxh"
        android:gravity="center_horizontal"
        app:contentInsetStart="0dp">
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="@dimen/_16pxh"
            android:layout_height="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_marginBottom="@dimen/_1pxv"
            android:scaleType="fitXY"
            android:src="@drawable/img_arrowleft_gray_900"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_arrowleft_gray_900" />

        <ImageView
            android:id="@+id/imageFavorite"
            android:layout_width="@dimen/_20pxh"
            android:layout_height="@dimen/_18pxh"
            android:layout_marginStart="@dimen/_321pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_favorite"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_favorite" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/elementsScrollView"
            style="@style/groupStylewhite_A700"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_3pxh"
            android:gravity="start"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/companyLogoJD"
                android:layout_width="@dimen/_56pxh"
                android:layout_height="@dimen/_56pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_26pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_image3_40x40" />

            <TextView
                android:id="@+id/txtOfferPosition"
                style="@style/txtRobotoromanmedium26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_17pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_design_lead2"
                tools:text="@string/lbl_design_lead2" />

            <TextView
                android:id="@+id/txtBusinessName"
                style="@style/txtRobotoromanmedium14_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_toptal"
                tools:text="@string/lbl_toptal" />

            <TextView
                android:id="@+id/txtOfferDate"
                style="@style/txtRobotoromanregular12_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginBottom="@dimen/_6pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/_20_07_2023"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="@dimen/_370pxh"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20pxh">

            </com.google.android.material.divider.MaterialDivider>

            <TextView
                android:id="@+id/titleWorkField"
                style="@style/txtRobotoromanbold11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:letterSpacing="0.04"
                android:singleLine="true"
                android:text="@string/job_category"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/txtWorkField"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent"
                android:text="@string/design"
                style="@style/txtRobotoromanregular14_3" />

            <TextView
                android:id="@+id/titleContractTime"
                style="@style/txtRobotoromanbold11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:letterSpacing="0.04"
                android:singleLine="true"
                android:text="@string/contract_time"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/txtContractTime"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent"
                android:text="@string/contractTimeTxt"
                style="@style/txtRobotoromanregular14_3" />

            <TextView
                android:id="@+id/titleJobDescription"
                style="@style/txtRobotoromanbold11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:letterSpacing="0.04"
                android:singleLine="true"
                android:text="@string/lbl_job_description"
                android:textAllCaps="true" />
            <TextView
                android:id="@+id/txtJobDescription"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent"
                android:text="@string/msg_can_you_bring_c"
                style="@style/txtRobotoromanregular14_3" />
        </LinearLayout>

    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnapplyJob"
        style="@style/btnSolidRounded_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginStart="@dimen/_54pxh"
        android:layout_marginEnd="@dimen/_54pxh"
        android:layout_marginBottom="@dimen/_70pxv"
        android:ellipsize="end"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:paddingStart="@dimen/_30pxh"
        android:paddingTop="@dimen/_14pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_14pxv"
        android:singleLine="true"
        android:text="@string/lbl_apply_now"
        android:textAllCaps="false"
        />
</LinearLayout>
