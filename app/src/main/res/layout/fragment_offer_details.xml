<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:id="@+id/job_descrption_fragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".OfferDetailsFragment"
    style="@style/groupStylewhite_A700">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10pxh"
        android:layout_marginTop="@dimen/_20pxv"
        android:layout_marginEnd="@dimen/_10pxh"
        android:gravity="center_horizontal"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50pxh"
            android:padding="@dimen/_10pxh"
            android:src="@drawable/img_arrowleft_black_900"
            tools:ignore="ContentDescription" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/elementsScrollView"
            style="@style/groupStylewhite_A700"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_3pxh"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOfferPosition"
                style="@style/txtRobotoromanmedium26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_17pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:ellipsize="end"
                android:text="@string/lbl_design_lead2"
                tools:text="@string/lbl_design_lead2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/companyLogoJD"
                    android:layout_width="@dimen/_40pxh"
                    android:layout_height="@dimen/_40pxh"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_marginEnd="@dimen/_10pxh"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/build_image_default" />

                <TextView
                    android:id="@+id/txtBusinessName"
                    style="@style/txtRobotoromanmedium17_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_toptal" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtOfferDate"
                style="@style/txtRobotoromanregular12_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginBottom="@dimen/_6pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/_20_07_2023"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="@dimen/_370pxh"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20pxh">

            </com.google.android.material.divider.MaterialDivider>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20pxh"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/job_icon1"
                    android:layout_width="@dimen/_20pxh"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10pxh"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/job_category_icon" />

                <TextView
                    android:id="@+id/titleWorkField"
                    style="@style/txtRobotoromanbold11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:letterSpacing="0.04"
                    android:singleLine="true"
                    android:text="@string/job_category"
                    android:textAllCaps="true" />

            </LinearLayout>


            <TextView
                android:id="@+id/txtWorkField"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent"
                android:text="@string/design"
                style="@style/txtRobotoromanregular14_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20pxh"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/job_icon2"
                    android:layout_width="@dimen/_20pxh"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10pxh"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/contract_time_icon" />

                <TextView
                    android:id="@+id/titleContractTime"
                    style="@style/txtRobotoromanbold11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:letterSpacing="0.04"
                    android:singleLine="true"
                    android:text="@string/contract_time"
                    android:textAllCaps="true" />

            </LinearLayout>



            <TextView
                android:id="@+id/txtContractTime"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent"
                android:text="@string/contractTimeTxt"
                style="@style/txtRobotoromanregular14_3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20pxh"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/job_icon3"
                    android:layout_width="@dimen/_20pxh"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10pxh"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/descripcion_icon" />

                <TextView
                    android:id="@+id/titleJobDescription"
                    style="@style/txtRobotoromanbold11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:letterSpacing="0.04"
                    android:singleLine="true"
                    android:text="@string/lbl_job_description"
                    android:textAllCaps="true" />

            </LinearLayout>


            <TextView
                android:id="@+id/txtJobDescription"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent"
                android:text="@string/msg_can_you_bring_c"
                style="@style/txtRobotoromanregular14_3" />
        </LinearLayout>

    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnapplyJob"
        style="@style/btnSolidRounded_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginStart="@dimen/_54pxh"
        android:layout_marginTop="@dimen/_10pxh"
        android:layout_marginEnd="@dimen/_54pxh"
        android:layout_marginBottom="@dimen/_65pxv"
        android:ellipsize="end"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:paddingStart="@dimen/_30pxh"
        android:paddingTop="@dimen/_14pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_14pxv"
        android:singleLine="true"
        android:text="@string/lbl_apply_now"
        android:textAllCaps="false"
        />
</LinearLayout>
