<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"

    android:gravity="center_horizontal"
        android:id="@+id/linearJobsdescrption"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnarrowleft"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_3pxh"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_A700">
            <androidx.appcompat.widget.Toolbar
                android:gravity="center_horizontal"
                android:id="@+id/toolbarToolbar"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_32pxv"
                android:layout_width="match_parent" app:contentInsetStart="0dp">
                <LinearLayout android:id="@+id/linearRowarrowleft"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageArrowleft"
                        android:layout_height="@dimen/_16pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_width="@dimen/_16pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_arrowleft_gray_900"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_arrowleft_gray_900"/>
                    <ImageView android:id="@+id/imageFavorite"
                        android:layout_height="@dimen/_18pxh"
                        android:layout_marginStart="@dimen/_321pxh"
                        android:layout_width="@dimen/_20pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_favorite"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_favorite"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
            <ImageView android:id="@+id/imageImageFour"
                android:layout_height="@dimen/_40pxh"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_26pxv"
                android:layout_width="@dimen/_40pxh"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_image3_2"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtLanguage"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_17pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@string/msg_head_of_product2"
                style="@style/txtRobotoromanmedium26" tools:text="@string/msg_head_of_product2"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtToptal"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_toptal"
                style="@style/txtRobotoromanmedium14_2" tools:text="@string/lbl_toptal"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtPostedon20Ju"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_17pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/msg_posted_on_20_ju"
                style="@style/txtRobotoromanregular12_2" tools:text="@string/msg_posted_on_20_ju"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/frameStackapplybefore"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_148pxv"
            android:layout_marginEnd="@dimen/_3pxh"
            android:layout_marginTop="@dimen/_11pxv"
            android:layout_width="@dimen/_411pxh" style="@style/groupStylewhite_A700">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerListapplybefore"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_24pxh"
                android:layout_marginVertical="@dimen/_24pxv"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_17pxh}" tools:itemCount="2"
                />
        </FrameLayout>
        <FrameLayout android:id="@+id/frameStackcreatefromfra"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_237pxv"
            android:layout_marginEnd="@dimen/_24pxh"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginTop="@dimen/_34pxv"
            android:layout_width="@dimen/_363pxh" style="@style/groupStylewhite_A700">
            <View android:background="@color/white_A700"
                android:id="@+id/viewCreatefromfra"
                android:layout_gravity="top|start"
                android:layout_height="@dimen/_184pxv"
                android:layout_marginBottom="@dimen/_10pxv" android:layout_width="@dimen/_363pxh"/>
            <LinearLayout android:id="@+id/linearColumnjobdescription"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtJobDescription"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.04"
                    android:singleLine="true"
                    android:text="@string/lbl_job_description"
                    android:textAllCaps="true"
                    style="@style/txtRobotoromanbold11" tools:text="@string/lbl_job_description"/>
                <TextView android:id="@+id/txtDescription"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_13pxv"
                    android:layout_width="match_parent"
                    android:text="@string/msg_can_you_bring_c"
                    style="@style/txtRobotoromanregular14_3" tools:text="@string/msg_can_you_bring_c"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowseemore"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtSeemore"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:layout_width="0dp"
                        android:letterSpacing="0.01"
                        android:singleLine="true"
                        android:text="@string/lbl_see_more"
                        style="@style/txtRobotoromansemibold13" tools:text="@string/lbl_see_more"/>
                    <ImageView android:id="@+id/imageIconnavigation"
                        android:layout_height="@dimen/_3pxh"
                        android:layout_marginBottom="@dimen/_6pxv"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_width="@dimen/_6pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_iconnavigation"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_iconnavigation"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout android:id="@+id/frameStackprice"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_54pxv"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_24pxh"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginTop="@dimen/_10pxv" android:layout_width="@dimen/_363pxh">
            <LinearLayout android:id="@+id/linearColumnprice"
                android:layout_gravity="bottom|start"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent"
                android:orientation="vertical" style="@style/groupStylewhite_A700">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtPrice"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.04"
                    android:singleLine="true"
                    android:text="@string/msg_roles_and_respo"
                    android:textAllCaps="true"
                    style="@style/txtRobotoromanbold11" tools:text="@string/msg_roles_and_respo"/>
                <TextView android:id="@+id/txtDescriptionOne"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="match_parent"
                    android:text="@string/msg_someone_who_h"
                    style="@style/txtPoppinsregular14" tools:text="@string/msg_someone_who_h"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowseemoreOne"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_101pxv"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtSeemoreOne"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:layout_width="0dp"
                        android:letterSpacing="0.01"
                        android:singleLine="true"
                        android:text="@string/lbl_see_more"
                        style="@style/txtPoppinssemibold12" tools:text="@string/lbl_see_more"/>
                    <ImageView android:id="@+id/imageIconnavigationOne"
                        android:layout_height="@dimen/_1pxh"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_width="@dimen/_6pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_iconnavigation_blue_a700"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_iconnavigation_blue_a700"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnApplyNow"
                android:layout_gravity="top|center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_54pxh"
                android:layout_marginStart="@dimen/_54pxh"
                android:layout_width="match_parent"
                android:letterSpacing="0.05"
                android:paddingBottom="@dimen/_14pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_14pxv"
                android:singleLine="true"
                android:text="@string/lbl_apply_now"
                android:textAllCaps="false"
                style="@style/btnSolidRounded_8" tools:text="@string/lbl_apply_now"/>
        </FrameLayout>
    </LinearLayout>