<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shapeableImageView"
            android:layout_width="@dimen/_90pxh"
            android:layout_height="@dimen/_90pxh"
            android:layout_gravity="center"
            android:padding="5sp"
            android:src="@drawable/company_logo" />

        <LinearLayout
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5pxh"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/company_name"
                style="@style/txtPoppinssemibold17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_nameCompany" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sector_company"
                    style="@style/txtPoppinsmedium12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_sectorCompany" />

                <TextView
                    style="@style/txtRobotoromanregular17_1"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/_20pxh"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_separator"/>

                <ImageView android:id="@+id/imageLinkedin"
                    android:layout_height="@dimen/_19pxh"
                    android:layout_width="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_marginEnd="@dimen/_5pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_linkedin_gray_401"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/location_company"
                    style="@style/txtPoppinsmedium12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_locationCompany" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>