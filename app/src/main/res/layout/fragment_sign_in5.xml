<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearSinginFive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    style="@style/groupStylewhite_A700">

    <FrameLayout
        android:id="@+id/frame12ChooseLangu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/groupStylewhite_A700"
        android:gravity="start">

        <ImageView
            android:id="@+id/imageBackground"
            android:layout_width="@dimen/_410pxh"
            android:layout_height="@dimen/_736pxh"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/img_background_736x410"
            tools:ignore="ContentDescription, src" />

        <LinearLayout
            android:id="@+id/linearColumn60xsixty"
            android:layout_width="match_parent"
            android:layout_height="652dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="@dimen/_32pxh"
            android:layout_marginTop="@dimen/_117pxv"
            android:layout_marginEnd="@dimen/_32pxh"
            android:layout_marginBottom="@dimen/_117pxv"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameUserPict"
                style="@style/groupStylegray_401cornerRadius"
                android:layout_width="@dimen/_60pxh"
                android:layout_height="@dimen/_60pxv"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/_10pxh">

                <TextView
                    android:id="@+id/txt60xSixty"
                    style="@style/txtRobotosemibolditalic13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_marginTop="@dimen/_22pxv"
                    android:layout_marginEnd="@dimen/_11pxh"
                    android:layout_marginBottom="@dimen/_21pxv"
                    android:ellipsize="end"
                    android:gravity="top|start"
                    android:singleLine="true"
                    android:text="@string/lbl_60_x_60"
                    tools:text="@string/lbl_60_x_60" />

                <ImageView
                    android:id="@+id/imagePngtreeavatar"
                    android:layout_width="@dimen/_60pxh"
                    android:layout_height="@dimen/_60pxh"
                    android:layout_gravity="start"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_pngtreeavatar"
                    tools:ignore="ContentDescription, src" />

            </FrameLayout>

            <TextView
                android:id="@+id/txtHiBrooklyn"
                style="@style/txtRobotoromanbold39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_21pxv"
                android:layout_marginEnd="@dimen/_3pxh"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/msg_hi_rabab_beiha"
                tools:text="@string/msg_hi_rabab_beiha" />

            <TextView
                android:id="@+id/txtPleaseselecty"
                style="@style/txtRobotoromanregular17_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_marginEnd="@dimen/_9pxh"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="@dimen/_5pxh"
                android:text="@string/msg_please_select_y"
                tools:text="@string/msg_please_select_y" />

            <LinearLayout
                android:id="@+id/linearColumncheckmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_17pxh"
                android:layout_marginTop="@dimen/_43pxv"
                android:layout_marginEnd="@dimen/_17pxh"
                android:gravity="start"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearOption01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnCheckmark"
                        android:layout_width="@dimen/_20pxh"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:background="@drawable/rectangle_bg_green_400_radius_10"
                        android:paddingHorizontal="@dimen/_4pxh"
                        android:paddingVertical="@dimen/_4pxv"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_checkmark"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtLanguage"
                        style="@style/txtRobotoromanbold17"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.34"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:text="@string/lbl_english"
                        tools:text="@string/lbl_english" />

                    <RadioButton
                        android:id="@+id/rbChinese"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_22pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_weight="0.54"
                        android:buttonTint="@color/bluegray_100"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:paddingStart="@dimen/_8pxh"
                        android:paddingBottom="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_chinese"
                        android:textColor="@color/gray_701"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_17pxh"
                        android:textStyle="normal"
                        tools:text="@string/lbl_chinese" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rgRadiogroupportuguese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_17pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbPortuguese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/bluegray_100"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:paddingStart="@dimen/_8pxh"
                        android:paddingTop="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_portuguese"
                        android:textColor="@color/gray_701"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_17pxh"
                        android:textStyle="normal"
                        tools:text="@string/lbl_portuguese" />

                    <RadioButton
                        android:id="@+id/rbSpanish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_21pxh"
                        android:buttonTint="@color/bluegray_100"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:paddingStart="@dimen/_8pxh"
                        android:paddingTop="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_spanish"
                        android:textColor="@color/gray_701"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_17pxh"
                        android:textStyle="normal"
                        tools:text="@string/lbl_spanish" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rgRadiogrouphindi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_marginEnd="@dimen/_2pxh"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbHindi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/bluegray_100"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:paddingStart="@dimen/_8pxh"
                        android:paddingBottom="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_hindi"
                        android:textColor="@color/gray_701"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_17pxh"
                        android:textStyle="normal"
                        tools:text="@string/lbl_hindi" />

                    <RadioButton
                        android:id="@+id/rbArabic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18pxh"
                        android:buttonTint="@color/bluegray_100"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:paddingStart="@dimen/_8pxh"
                        android:paddingBottom="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_arabic"
                        android:textColor="@color/gray_701"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_17pxh"
                        android:textStyle="normal"
                        tools:text="@string/lbl_arabic" />

                    <RadioButton
                        android:id="@+id/rbRussian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_19pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:buttonTint="@color/bluegray_100"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:paddingStart="@dimen/_8pxh"
                        android:paddingBottom="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_russian"
                        android:textColor="@color/gray_701"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_17pxh"
                        android:textStyle="normal"
                        tools:text="@string/lbl_russian" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rgRadiogroupbulgarian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_17pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbBulgarian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:buttonTint="@color/bluegray_100"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:paddingStart="@dimen/_8pxh"
                        android:paddingTop="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_bulgarian"
                        android:textColor="@color/gray_701"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_17pxh"
                        android:textStyle="normal"
                        tools:text="@string/lbl_bulgarian" />

                    <RadioButton
                        android:id="@+id/rbLithuanian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:buttonTint="@color/bluegray_100"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:paddingStart="@dimen/_8pxh"
                        android:paddingBottom="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_lithuanian"
                        android:textColor="@color/gray_701"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_17pxh"
                        android:textStyle="normal"
                        tools:text="@string/lbl_lithuanian" />
                </RadioGroup>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/frameButtonVerify"
                android:layout_width="@dimen/_310pxh"
                android:layout_height="@dimen/_50pxv"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_1pxh">

                <TextView
                    android:id="@+id/txtVerify"
                    style="@style/txtRobotosemibolditalic17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="@dimen/_134pxh"
                    android:layout_marginTop="@dimen/_13pxv"
                    android:layout_marginEnd="@dimen/_134pxh"
                    android:layout_marginBottom="@dimen/_13pxv"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_3pxh"
                    android:singleLine="true"
                    android:text="@string/lbl_verify"
                    tools:text="@string/lbl_verify" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnContinueOne"
                    style="@style/btnSolidRounded_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_15pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_15pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_continue"
                    android:textAllCaps="false"
                    tools:text="@string/lbl_continue" />
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

