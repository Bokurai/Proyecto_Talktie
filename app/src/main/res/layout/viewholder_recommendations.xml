<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="@dimen/_5pxh"
            android:layout_marginBottom="@dimen/_5pxh"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageTeacherRecommend"
                android:layout_gravity="center"
                android:layout_height="@dimen/_50pxh"
                android:layout_width="@dimen/_40pxh"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:src="@drawable/teacher_default" />

            <LinearLayout
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5pxh"
                android:gravity="start"
                android:orientation="vertical">

                <TextView android:ellipsize="end"
                    android:id="@+id/nameTeacherRecommend"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@string/lbl_teacher_name"
                    style="@style/txtRobotoromanbold17"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/position_teacher"
                        style="@style/txtPoppinsmedium12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_position" />

                    <TextView
                        style="@style/txtRobotoromanregular17_1"
                        android:id="@+id/separatorT"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/_20pxh"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_separator"/>

                    <TextView
                        android:id="@+id/email_teacher"
                        style="@style/txtPoppinsmedium12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_email" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textTeacherRecommend"
            style="@style/txtRobotoromanregular15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_5pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginBottom="@dimen/_10pxh"
            android:gravity="start"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="@dimen/_5pxh"
            android:text="@string/lbl_recomend"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>


