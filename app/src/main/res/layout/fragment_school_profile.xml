<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".schoolProfile"
    android:gravity="start"
    android:id="@+id/profileStudent"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/groupStylewhite_A700">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearColumnrectanglefortynine"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameStackrectanglesix"
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:gravity="start">

                <FrameLayout
                    android:id="@+id/frameStackrectanglefortynine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_136pxv"
                    android:layout_gravity="top|start"
                    android:layout_marginBottom="@dimen/_10pxv">

                    <ImageView
                        android:id="@+id/imageRectangleFortyNine"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_136pxh"
                        android:layout_gravity="start"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_rectangle49"
                        tools:ignore="ContentDescription" />

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbarToolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:layout_marginStart="@dimen/_17pxh"
                        android:layout_marginTop="@dimen/_16pxv"
                        android:layout_marginEnd="@dimen/_17pxh"
                        android:layout_marginBottom="@dimen/_16pxv"
                        app:contentInsetStart="0dp">

                        <LinearLayout
                            android:id="@+id/LogoutLinear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/logout"
                                android:layout_width="@dimen/_40pxh"
                                android:layout_height="@dimen/_35pxh"
                                android:layout_marginStart="@dimen/_334pxh"
                                android:layout_marginTop="@dimen/_8pxv"
                                android:layout_marginBottom="@dimen/_7pxv"
                                android:scaleType="fitXY"
                                android:src="@drawable/logout"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="365dp"
                                android:layout_height="wrap_content"
                                android:text="Log out"
                                android:textAlignment="textEnd"></TextView>
                        </LinearLayout>

                    </androidx.appcompat.widget.Toolbar>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="@dimen/_73pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_73pxh"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImgSchool"
                        android:layout_width="102dp"
                        android:layout_height="102dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/profile_image_defaut"
                        tools:ignore="ContentDescription" />


                    <TextView
                        android:id="@+id/txtSchoolName"
                        style="@style/txtPoppinssemibold22_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_9pxh"
                        android:singleLine="true"
                        android:text="@string/lbl_name" />

                    <TextView
                        android:id="@+id/edit_profiletxtS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/edit_profile_image" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:clipToPadding="false"
            android:fillViewport="true"
            android:id="@+id/scrollViewScrollview"
            android:layout_height="0dp" android:layout_weight="1"
            android:layout_width="match_parent">

        <FrameLayout
            android:id="@+id/frameModificarperfi"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_55pxh"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearAbout"
                style="@style/groupStylecornerRadius_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginTop="@dimen/_5pxv"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearTitle3"
                    style="@style/groupStylecornerRadius_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_marginEnd="@dimen/_17pxh"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtAboutMe"
                        style="@style/txtRobotoromanbold17"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.54"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:text="@string/lbl_summary" />

                    <ImageView
                        android:id="@+id/aboutEditS"
                        android:layout_width="@dimen/_20pxh"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_15pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_edit" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSaveS"
                        style="@style/btnSolidRounded_P"
                        android:layout_width="@dimen/_40pxh"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:text="@string/lbl_save"
                        android:visibility="gone" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txtDescriptionSchool"
                    style="@style/txtRobotoromanregular15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17pxh"
                    android:layout_marginTop="@dimen/_5pxv"
                    android:layout_marginEnd="@dimen/_17pxh"
                    android:gravity="start"
                    android:hint="@string/lbl_summary"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_5pxh" />


                <LinearLayout
                    android:id="@+id/linearTitle4"
                    style="@style/groupStylecornerRadius_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_marginEnd="@dimen/_17pxh"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textRecommend"
                        style="@style/txtRobotoromanbold17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:text="@string/lbl_teachers"
                        android:textAlignment="center" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/teachersRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5pxv"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

        </FrameLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/newTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_25pxh"
        android:layout_marginBottom="@dimen/_75pxh"
        app:backgroundTint="@color/light_green_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />





</androidx.constraintlayout.widget.ConstraintLayout>
