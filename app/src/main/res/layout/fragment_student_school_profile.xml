<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".studentSchoolProfile"
    android:gravity="start"
    android:id="@+id/profileStudent"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/groupStylewhite_A700">

    <LinearLayout android:id="@+id/linearColumnrectanglefortynine"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">

        <FrameLayout
            android:id="@+id/frameStackrectanglesix"
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:gravity="start">

            <FrameLayout
                android:id="@+id/frameStackrectanglefortynine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_136pxv"
                android:layout_gravity="top|start"
                android:layout_marginBottom="@dimen/_10pxv">

                <ImageView
                    android:id="@+id/imageRectangleFortyNine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_115pxh"
                    android:layout_gravity="start"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_rectangle49"
                    tools:ignore="ContentDescription"/>

            </FrameLayout>

            <LinearLayout
                android:layout_gravity="bottom|end"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_73pxh"
                android:layout_marginStart="@dimen/_73pxh"
                android:layout_marginTop="@dimen/_5pxh"
                android:layout_width="match_parent" android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImgStudent"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/profile_image_defaut"
                    tools:ignore="ContentDescription"
                    />


                <TextView
                    android:id="@+id/txtStudentName"
                    style="@style/txtPoppinssemibold22_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_9pxh"
                    android:singleLine="true"
                    android:text="@string/lbl_name" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_email"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_height="wrap_content"
                        android:text="@string/symbol"/>

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_phone"/>

                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/frameModificarperfi"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_5pxh"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearAbout"
                    style="@style/groupStylecornerRadius_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginTop="@dimen/_5pxv"
                    android:orientation="vertical">


                        <TextView
                            android:id="@+id/txtAboutMe"
                            style="@style/txtRobotoromanbold17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15pxh"
                            android:ellipsize="end"
                            android:lineSpacingExtra="@dimen/_3pxh"
                            android:singleLine="true"
                            android:text="@string/lbl_about_me" />


                        <TextView
                            android:id="@+id/txtDescription"
                            style="@style/txtRobotoromanregular15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_17pxh"
                            android:layout_marginTop="@dimen/_5pxv"
                            android:layout_marginBottom="@dimen/_10pxh"
                            android:layout_marginEnd="@dimen/_17pxh"
                            android:gravity="start"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="@dimen/_5pxh"
                            android:hint="@string/lbl_about"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textRecommend"
                    style="@style/txtRobotoromanbold17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:lineSpacingExtra="@dimen/_3pxh"
                    android:singleLine="true"
                    android:text="@string/add_recommendation" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommendRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5pxv"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        </LinearLayout>
</LinearLayout>
