<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileStudent"
    android:gravity="start"
    android:id="@+id/profileStudent"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/groupStylewhite_A700">
    <LinearLayout android:id="@+id/linearColumnrectanglefortynine"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">

        <FrameLayout
            android:id="@+id/frameStackrectanglesix"
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:gravity="start">

            <FrameLayout
                android:id="@+id/frameStackrectanglefortynine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_136pxv"
                android:layout_gravity="top|start"
                android:layout_marginBottom="@dimen/_10pxv">

                <ImageView
                    android:id="@+id/imageRectangleFortyNine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_136pxh"
                    android:layout_gravity="start"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_rectangle49"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_rectangle49" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginStart="@dimen/_17pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_marginEnd="@dimen/_17pxh"
                    android:layout_marginBottom="@dimen/_16pxv"
                    app:contentInsetStart="0dp">

                    <LinearLayout
                        android:id="@+id/LogoutLinear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/logout"
                            android:layout_width="@dimen/_35pxh"
                            android:layout_height="@dimen/_35pxh"
                            android:layout_marginStart="@dimen/_334pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_marginBottom="@dimen/_7pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/logout"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="365dp"
                            android:layout_height="wrap_content"
                            android:text="Log out"
                            android:textAlignment="textEnd" >
                        </TextView>
                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>
            </FrameLayout>

            <LinearLayout
                android:layout_gravity="bottom|end"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_73pxh"
                android:layout_marginStart="@dimen/_73pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/frameAvatar"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:layout_gravity="top|start"
                    android:layout_marginEnd="@dimen/_73pxh"
                    android:layout_marginStart="@dimen/_73pxh">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageRectangleSix"
                        android:layout_width="102dp"
                        android:layout_height="122dp"
                        android:layout_gravity="top|start"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:src="@drawable/img_pngtreeavatar"
                        tools:ignore="ContentDescription" />

                    <FrameLayout
                        android:id="@+id/frameStackellipseeleven"
                        android:layout_width="@dimen/_29pxh"
                        android:layout_height="@dimen/_31pxv"
                        android:layout_gravity="bottom|end"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_10pxv">

                        <View
                            android:id="@+id/viewEllipseEleven"
                            android:layout_width="@dimen/_29pxh"
                            android:layout_height="@dimen/_31pxh"
                            android:layout_gravity="start"
                            android:background="@drawable/rectangle_bg_gray_102_border_white_a700_radius_15_98" />

                        <ImageView
                            android:id="@+id/imageEdit"
                            android:layout_width="@dimen/_11pxh"
                            android:layout_height="@dimen/_13pxh"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_9pxh"
                            android:layout_marginVertical="@dimen/_9pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_edit"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/txtRababBeihaqi"
                    style="@style/txtPoppinssemibold22_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_11pxh"
                    android:singleLine="true"
                    android:text="@string/lbl_rabab_beihaqi2"
                    tools:text="@string/lbl_rabab_beihaqi2" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:clipToPadding="false"
        android:fillViewport="true"
        android:id="@+id/scrollViewScrollview"
        android:layout_height="0dp" android:layout_weight="1"
        android:layout_width="match_parent">

        <FrameLayout android:id="@+id/frameModificarperfi"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <LinearLayout
                android:id="@+id/linearAbout"
                style="@style/groupStylecornerRadius_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginTop="@dimen/_5pxv"
                android:layout_marginBottom="@dimen/_223pxv"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearTitle3"
                    style="@style/groupStylecornerRadius_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_marginEnd="@dimen/_17pxh"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtAboutMe"
                        style="@style/txtRobotoromanbold17"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_weight="0.54"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:text="@string/lbl_about_me"
                        tools:text="@string/lbl_about_me" />

                    <ImageView
                        android:id="@+id/aboutEdit"
                        android:layout_width="@dimen/_11pxh"
                        android:layout_height="@dimen/_13pxh"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_9pxh"
                        android:layout_marginVertical="@dimen/_9pxv"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_edit"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtDescription"
                    style="@style/txtRobotoromanregular15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17pxh"
                    android:layout_marginTop="@dimen/_5pxv"
                    android:layout_marginEnd="@dimen/_17pxh"
                    android:gravity="start"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_5pxh"
                    android:text="@string/lbl_about"/>

                <LinearLayout
                    android:id="@+id/linearTitle4"
                    style="@style/groupStylecornerRadius_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textRecommend"
                        style="@style/txtRobotoromanbold17"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_weight="0.54"
                        android:ellipsize="end"
                        android:textAlignment="center"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:text="@string/lbl_recomend" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommendRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5pxv"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
